@page
@model RecruitCatPawarah.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Company: @Html.DisplayFor(model => model.Company.CompanyName)</h1>

<div>
    <h4>Company</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OpenPosition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OpenPosition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.ProvidesSponsorship)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.ProvidesSponsorship)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.OperatesOutsideUS)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.OperatesOutsideUS)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.YearFounded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.YearFounded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.IndustryAssociated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.IndustryAssociated.IndustryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.EmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.EmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.WebsiteUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.WebsiteUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.ContactNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.ContactNumber)
        </dd>
    </dl>
</div>

@if (Model.Company.Candidates.Any())
{
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].HighestQualification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].YearsWorkedOutsideUS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].CompanyAssociated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Company.Candidates[0].IndustryAssociated)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Company.Candidates)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetSalary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HighestQualification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearsWorkedOutsideUS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyAssociated.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IndustryAssociated.IndustryName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
else
{
    <div class="alert alert-warning">No Candidate available to display currently</div>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
